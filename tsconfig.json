{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es5", "es2015.core"
        ],
        // FIXME(PR): re-disable this once we migrate all .js files to .ts
        "allowJs": true,

        "sourceMap": false,
        "outDir": "lib",
        // FIXME(PR): re-enable this once we migrate all .js files to .ts
        //"declaration": true,

        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
